<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="24dp">

    <!-- Pregunta para ID del ciclo -->
    <TextView
        android:id="@+id/agregar_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es el ID del ciclo?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/agregar_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="ID del ciclo"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/agregar_id_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Pregunta para Año -->
    <TextView
        android:id="@+id/agregar_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿En qué año?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/agregar_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/agregar_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Año"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/agregar_year_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Pregunta para Número -->
    <TextView
        android:id="@+id/agregar_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es el número?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/agregar_year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/agregar_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Número"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/agregar_number_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Pregunta para Fecha de inicio -->
    <TextView
        android:id="@+id/agregar_fecha_inicio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es la fecha de inicio?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/agregar_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/agregar_fecha_inicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Fecha inicio (YYYY-MM-DD)"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/agregar_fecha_inicio_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Pregunta para Fecha de fin -->
    <TextView
        android:id="@+id/agregar_fecha_fin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es la fecha de fin?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/agregar_fecha_inicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/agregar_fecha_fin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Fecha fin (YYYY-MM-DD)"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/agregar_fecha_fin_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Pregunta para Estado de activo -->
    <TextView
        android:id="@+id/agregar_activo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Está activo?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/agregar_fecha_fin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/agregar_activo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activo"
        app:layout_constraintTop_toBottomOf="@id/agregar_activo_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btn_guardar_ciclo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/agregar_activo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



