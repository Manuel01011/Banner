<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="24dp">

    <!-- ID del estudiante -->
    <TextView
        android:id="@+id/agregar_estudiante_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es el ID del estudiante?"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/agregar_estudiante_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="ID del estudiante"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_id_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Nombre del estudiante -->
    <TextView
        android:id="@+id/agregar_estudiante_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es el nombre del estudiante?"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/agregar_estudiante_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Nombre del estudiante"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Número de teléfono -->
    <TextView
        android:id="@+id/agregar_estudiante_telNumber_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es el número de teléfono?"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/agregar_estudiante_telNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Número de teléfono"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_telNumber_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Correo electrónico -->
    <TextView
        android:id="@+id/agregar_estudiante_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es el correo electrónico?"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_telNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/agregar_estudiante_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_email_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Fecha de nacimiento -->
    <TextView
        android:id="@+id/agregar_estudiante_bornDate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es la fecha de nacimiento?"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/agregar_estudiante_bornDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Fecha de nacimiento (YYYY-MM-DD)"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_bornDate_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Código de carrera -->
    <TextView
        android:id="@+id/agregar_estudiante_careerCod_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es el código de la carrera?"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_bornDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/agregar_estudiante_careerCod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Código de carrera"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_careerCod_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Botón para guardar el estudiante -->
    <Button
        android:id="@+id/btn_guardar_estudiante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar estudiante"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/agregar_estudiante_careerCod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
