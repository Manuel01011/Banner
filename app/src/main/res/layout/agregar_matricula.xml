<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/agregar_titulo_matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Matrícula"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- ID de estudiante -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Estudiante"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/agregar_id_estudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese ID de Estudiante"
        android:inputType="number"/>

    <!-- ID de grupo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Grupo"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/agregar_id_grupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese ID de Grupo"
        android:inputType="number"/>

    <!-- Calificación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificación"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/agregar_calificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Calificación"
        android:inputType="numberDecimal"/>

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btn_guardar_matricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Matrícula"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"/>
</LinearLayout>


